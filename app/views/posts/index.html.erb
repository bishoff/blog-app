<%= paginate @posts %>
<span class = 'new-link'><%= link_to 'New Post', new_post_path if user_signed_in? %></span>

<% @posts.each do |post| %>
  <h1 class = 'post-title'>
    <%= link_to post.title, post %>
  </h1>

  <% if current_user == post.user %>
    <span class = 'post-menu'>Posted by <%= link_to post.user.login, post.user %> |
      <%= link_to 'edit', edit_post_path(post), :class => 'edit-link' %>
      <%= link_to 'delete', post, :confirm => 'Are you sure?', :method => :delete, :class => 'delete-link' %>
    </span>
  <% end %>

  <%= post.content %>

  <br />
  
  <hr />
  <% end %>
<br />

